<Window x:Class="AngelMacro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AngelMacro"
        mc:Ignorable="d"
        Title="Angel Macro" Height="450" Width="800" FontFamily="Consolas" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu x:Name="FileMenu">
            <MenuItem Header="File">
                <MenuItem Header="Save" Click="SaveButton_Click"/>
                <MenuItem Header="Load" Click="LoadButton_Click"/>
                <MenuItem Header="Toggle Topmost" Click="TopmostButton_Click"/>
            </MenuItem>
            <MenuItem Header="Keys">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" MaxHeight="200">
                    <StackPanel x:Name="Keys"/>
                </ScrollViewer>
            </MenuItem>
            <MenuItem Header="Mouse">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" MaxHeight="200">
                    <StackPanel x:Name="MouseKeys">
                        <CheckBox x:Name="leftButtonToggle" Content="LMB" Click="ToggleLeft"/>
                        <CheckBox x:Name="rightButtonToggle" Content="RMB" Click="ToggleRight"/>
                    </StackPanel>
                </ScrollViewer>
            </MenuItem>
            <CheckBox x:Name="mouseLocationToggle" Content="Record Mouse Location" Click="ToggleMouseLocation"/>
            <CheckBox x:Name="delayToggle" Content="Record Delays"/>
            <MenuItem Header="ADD CONDITION" Click="AddConditionButton_Click"/>
        </Menu>

        <ScrollViewer Grid.Row="2" Margin="16,2,16,2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="ScriptBox" AcceptsReturn="True" IsEnabled="False"/>
        </ScrollViewer>

        <Button x:Name="UnlockTextButton" Content="Unlock Script" Click="UnlockTextButton_Click" Grid.Row="1" Margin="16,16,16,0" FontSize="14"/>

        <GroupBox Grid.Row="3" Header="Record" FontSize="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button x:Name="RecordButton" Content="Start Recording" Click="RecordButton_Click" Margin="2" FontSize="14"/>
                <Button x:Name="PauseRecordButton" Content="Pause Recording (F6)" Click="PauseRecordButton_Click" Grid.Column="1" Margin="2" FontSize="14" IsEnabled="False"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="4" Header="Replay" FontSize="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button x:Name="RunButton" Content="Run Macro (F7)" Click="RunButton_Click" Margin="2" FontSize="14" IsEnabled="False"/>
                <Button x:Name="StopButton" Content="Stop Macro (F8)" Click="StopButton_Click" Grid.Column="1" Margin="2" FontSize="14" IsEnabled="False"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
